{
  "name": "branch-note",
  "publisher": "nazeh-taha",
  "author": {
    "name": "Nazeh Taha",
    "url": "https://www.nazeh-taha.com/"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/Nazeh-Taha-Dev/branch-note.git"
  },
  "displayName": "Branch Note",
  "icon": "images/icon.png",
  "description": "Shows notes specific to each Git branch",
  "version": "0.0.7",
  "engines": {
    "vscode": "^1.104.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onStartupFinished"
  ],
  "main": "./dist/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "branchNotes.createNote",
        "title": "Create Branch Note",
        "icon": "$(edit)"
      },
      {
        "command": "branchNotes.viewNote",
        "title": "View Branch Note"
      },
      {
        "command": "branchNotes.deleteNote",
        "title": "Delete Branch Note",
        "icon": "$(trash)"
      }
    ],
    "viewsContainers": {
      "activitybar": [
        {
          "id": "branchNotesContainer",
          "title": "Branch Notes",
          "icon": "$(note)"
        }
      ]
    },
    "views": {
      "branchNotesContainer": [
        {
          "id": "branchNotesView",
          "name": "Branch Notes"
        }
      ]
    },
    "menus": {
      "view/title": [
        {
          "command": "branchNotes.createNote",
          "when": "view == branchNotesView",
          "group": "navigation"
        }
      ],
      "editor/title": [
        {
          "command": "branchNotes.createNote",
          "group": "navigation"
        }
      ],
      "view/item/context": [
        {
          "command": "branchNotes.deleteNote",
          "when": "view == branchNotesView && viewItem == noteItem",
          "group": "inline"
        }
      ]
    },
    "keybindings": [
      {
        "command": "branchNotes.createNote",
        "key": "ctrl+shift+n",
        "mac": "cmd+shift+n"
      }
    ]
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "test": "node ./out/test/runTest.js"
  },
  "devDependencies": {
    "@types/glob": "^8.1.0",
    "@types/mocha": "^10.0.1",
    "@types/node": "16.x",
    "@types/vscode": "^1.104.0",
    "@typescript-eslint/eslint-plugin": "^5.59.1",
    "@typescript-eslint/parser": "^5.59.1",
    "@vscode/test-electron": "^2.3.0",
    "eslint": "^8.39.0",
    "glob": "^8.1.0",
    "mocha": "^10.2.0",
    "typescript": "^5.0.4"
  }
}
